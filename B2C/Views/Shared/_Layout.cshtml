<!DOCTYPE html>
<html >
<head>
    @using Microsoft.AspNet.Identity;
    @using System.Security.Claims;

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - B2C</title>
    @Styles.Render("~/Content/css")
    @RenderSection("css", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("header", required: false)
</head>
<body>

    @{ 
        string userName = string.Empty;
        int quantityProducts = 0;
        string authenticationLabel = "Iniciar sesión";

        if (Request.IsAuthenticated)
        {
            userName = string.Format("Bienvenido: {0} {1}", (User.Identity as ClaimsIdentity).FindFirst(ClaimTypes.Name.ToString()).Value, (User.Identity as ClaimsIdentity).FindFirst(ClaimTypes.Surname.ToString()).Value).Trim() ;

            var lstQuantitys = (User.Identity as ClaimsIdentity).FindFirst(ClaimTypes.SerialNumber.ToString()).Value;
            quantityProducts = string.IsNullOrEmpty(lstQuantitys) ? 0 : lstQuantitys.Split(',').Sum(itm => Convert.ToInt32(itm));

            authenticationLabel = "Salir";
        }
    }

        <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <h4>@userName</h4>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i ><img src="~/Content/Images/AddCart.png" width="18px;" /><strong> @quantityProducts</strong></i>
                    </a>
                    
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->

                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        @*<li><a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>*@
                        <li class="divider"></li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i> @authenticationLabel</a>
                            }
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        
                        <li>
                            <a href="@Url.Action("Products", "Administration")"><i class="fa fa-edit fa-fw"></i> Busqueda de Productos</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ShoppingCarts", "Administration")"><i class="fa fa-edit fa-fw"></i> Carrito de Compras</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            @RenderBody()
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/masterjs")
    
    @Scripts.Render("~/bundles/metisMenu")
    @Scripts.Render("~/bundles/raphael")
    @Scripts.Render("~/bundles/morrisjs")
    @Scripts.Render("~/bundles/sbadmin")
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
