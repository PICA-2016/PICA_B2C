@model B2C.Models.ShippingInformationViewModel

@{
    ViewBag.Title = "Procesar Orden Carrito de Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <link href="~/Content/Kendo/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/Kendo/kendo.default.min.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Procesar Orden Carrito de Compras</h1>
    </div>
</div>

<div class="row">

    @*Mostar mensaje*@
    @if (ViewData["Result"] != null && (bool)(ViewData["Result"]))
    {
        <script type="text/javascript">
            CompleteDetail('@(ViewData["ShowMessage"] !=null?ViewData["ShowMessage"].ToString():string.Empty)');
        </script>
    }
    <div id="mensajeResultadosEdicionContainer" class="alert alert-info alert-dismissible hidden" role="alert">
        <button type="button" class="close" onclick="$('#resultMessageContainer').addClass('hidden')" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <span id="mensajeResultadosEdicion">@ViewData["ShowMessage"]</span>
    </div>

    @using (Html.BeginForm("ProcessCart", "Administration", new { }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h4>Datos para el envío del pedido</h4>
        <div class="col-xs-12">
            <div class="row">
                <div class="row">
                    <div class="col-sm-4">
                        <div>
                            *@Html.LabelFor(m => m.CrediCardType)
                            @Html.TextBoxFor(m => m.CrediCardType, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CrediCardType, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.CreditCardHolder)
                            @Html.TextBoxFor(m => m.CreditCardHolder, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CreditCardHolder, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.CreditCardNumber)
                            @Html.TextBoxFor(m => m.CreditCardNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CreditCardNumber, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.CrediCardExpiration)
                        </div>
                        <div>
                            <input id="dpCrediCardExpiration" name="CrediCardExpiration" value="@Model.CrediCardExpiration.ToString("yyyy/MM/dd")" onkeydown="return false;" />
                            @Html.ValidationMessageFor(m => m.CrediCardExpiration, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-4 ">
                        <div>
                            *@Html.LabelFor(m => m.Names)
                            @Html.TextBoxFor(m => m.Names, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Names, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.LastNames)
                            @Html.TextBoxFor(m => m.LastNames, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.LastNames, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.ShippingAddress)
                            @Html.TextBoxFor(m => m.ShippingAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ShippingAddress, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.City)
                            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-4 ">
                        <div>
                            *@Html.LabelFor(m => m.State)
                            @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.Zip)
                            @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Zip, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            *@Html.LabelFor(m => m.Country)
                            @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            @Html.ValidationMessage("mensajeError", new { @class = "text-danger", id = "mensajeValidacion" }) <br />

            <div id="loader" class="" aletr="" style="display:none">
                <h5><img src="~/Content/Kendo/Default/loading.gif" />Cargando...</h5>
            </div>
        </div>

        <div class="col-xs-12">
            <div class="" style="text-align:center">
                <br />
                <br />
                <button type="submit" style="width:110px; height:80px; ">
                    <img src="~/Content/Images/Aceptar.png" /><h5>Aceptar</h5>
                </button>
                <button type="button" style="width:110px; height:80px;" onclick="window.location.href = '@Url.Action("ShoppingCarts")'">
                    <img src="~/Content/Images/Cancelar.png" /><h5>Cancelar</h5>
                </button>
            </div>
        </div>
    }
</div>
@section css {

}
@section scripts {

    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>

    <script src="~/Scripts/Kendo/kendo.core.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.calendar.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.popup.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.datepicker.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.datetimepicker.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.timepicker.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.data.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.userevents.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.listview.min.js"></script>
    <script src="~/Scripts/Kendo/kendo.selectable.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            //CrediCardExpiration
            $("#dpCrediCardExpiration").kendoDatePicker(
                {
                    value: new Date(),
                    format: "yyyy/MM/dd"
                });
        });
    </script>
}
