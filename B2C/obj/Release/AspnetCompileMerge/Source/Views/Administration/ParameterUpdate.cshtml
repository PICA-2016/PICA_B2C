@model PICA_B2C.Business.MainModule.Entities.Models.Item
@{var idContenedor = "cont" + "#:Product.ProductId#";
    var loadingContenedor = "loading" + "#:Product.ProductId#";
    var submitid = "submit" + "#:Product.ProductId#"; }
<div id="@idContenedor" class="col-md-9">
    <div class="row contenedorParametro">
        <div class="col-xs-3">
            @Html.Hidden("ProductId", "#:Product.ProductId#", new { @class = "productId" })
            <input name="Valor" class="inpEntero" value="#:Quantity#" onchange="quantityOnChange(this)" type="number" min="1" max="100" />

            <img id="@loadingContenedor" src="~/Content/Kendo/Default/loading.gif" style="display:none" />
            <button type="submit" id="@submitid" class="hidden">Guardar</button>
        </div>
    </div>
</div>
